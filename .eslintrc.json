{
  "env": {
    "browser": true,
    "node": true
  },
  "extends": [
    "next/core-web-vitals",
    "prettier"
  ],
  "plugins": [
    "import",
    "simple-import-sort",
    "prettier"
  ],
  "rules": {
    "import/order": "off",
    "simple-import-sort/imports": [
      "error",
      {
        "groups": [
          [
            "^react",
            "^[a-z]",
            "external",
            "builtin",
            "internal",
            "unknown",
            "^@",
            "^@?\\w"
          ],
          [
            "^@/app/",
            "^@?\\w"
          ],
          [
            "^@/config/",
            "^@?\\w"
          ],
          [
            "^[./]",
            "^@?\\w"
          ],
          [
            "^@/components/",
            "^@?\\w"
          ],
          [
            "^@/assets/",
            "^@?\\w"
          ],
          [
            "^@/redux/",
            "^@?\\w"
          ],
          [
            "^@/lib/",
            "^@?\\w"
          ],
          [
            "^@/helpers/",
            "^@?\\w"
          ],
          [
            "^@/constants/",
            "^@?\\w"
          ],
          [
            "^@/hooks/",
            "^@?\\w"
          ]
        ]
      }
    ],
    "indent": [
      "off"
    ],
    "linebreak-style": [
      "error",
      "windows"
    ],
    "quotes": [
      "error",
      "double"
    ],
    "semi": [
      "error",
      "always"
    ],
    "react/jsx-uses-react": "error",
    "react/jsx-uses-vars": "error",
    "comma-dangle": [
      "error",
      "never"
    ],
    "react/jsx-curly-spacing": [
      2,
      "never",
      {
        "allowMultiline": false
      }
    ],
    "react/self-closing-comp": [
      "error",
      {
        "component": true,
        "html": true
      }
    ],
    "react/jsx-closing-bracket-location": [
      2,
      "tag-aligned"
    ],
    "@next/next/no-img-element": "off"
  }
}